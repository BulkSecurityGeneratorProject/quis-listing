<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <changeSet id="00000000000000" author="tmanev" dbms="postgresql,oracle">
        <createSequence sequenceName="hibernate_sequence" startValue="1000" incrementBy="1"/>
    </changeSet>

    <!--
        QUIS Listing service core tables.
        The initial schema has the '00000000000001' id, so that it is over-written if we re-generate it.
    -->
    <changeSet id="00000000000001" author="tmanev">
        <createTable tableName="ql_user">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="password_hash" type="varchar(60)"/>
            <column name="email" type="varchar(100)">
                <constraints unique="true" nullable="true"/>
            </column>
            <column name="activated" type="boolean" valueBoolean="false">
                <constraints nullable="false" />
            </column>
            <column name="activation_key" type="varchar(20)"/>
            <column name="reset_key" type="varchar(20)"/>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="reset_date" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <createIndex indexName="idx_user_login"
                     tableName="ql_user"
                     unique="true">
            <column name="login" type="varchar(100)"/>
        </createIndex>
        <createIndex indexName="idx_user_email"
                     tableName="ql_user"
                     unique="true">
            <column name="email" type="varchar(100)"/>
        </createIndex>

        <createTable tableName="ql_authority">
            <column name="role" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="capabilities" type="longtext" />
        </createTable>

        <createTable tableName="ql_user_authority">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="authority_role" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="user_id, authority_role" tableName="ql_user_authority"/>

        <addForeignKeyConstraint baseColumnNames="authority_role"
                                 baseTableName="ql_user_authority"
                                 constraintName="fk_authority_role"
                                 referencedColumnNames="role"
                                 referencedTableName="ql_authority"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="ql_user_authority"
                                 constraintName="fk_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ql_user"/>

        <createTable tableName="ql_post">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="text">
                <constraints nullable="false" />
            </column>
            <column name="content" type="longtext" />
            <column name="name" type="varchar(200)">
                <constraints nullable="false" />
            </column>
            <column name="type" type="varchar(20)">
                <constraints nullable="false" />
            </column>
            <column name="status" type="varchar(20)">
                <constraints nullable="false" />
            </column>
            <column name="date" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="modified" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_post_name"
                     tableName="ql_post"
                     unique="true">
            <column name="name" type="varchar(200)"/>
        </createIndex>
        <createIndex indexName="idx_user_id"
                     tableName="ql_post"
                     unique="false">
            <column name="user_id" type="bigint"/>
        </createIndex>
        
        <createTable tableName="ql_term">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(200)">
                <constraints nullable="false" />
            </column>
            <column name="slug" type="varchar(200)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createTable tableName="ql_term_taxonomy">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="term_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="taxonomy" type="varchar(32)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="longtext">
                <constraints nullable="false" />
            </column>
            <column name="parent_id" type="bigint" >
                <constraints nullable="true"/>
            </column>
            <column name="count" type="bigint(20)" defaultValue="0">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createTable tableName="ql_term_relationship">
            <column name="object_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="term_taxonomy_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="term_order" type="int(11)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>