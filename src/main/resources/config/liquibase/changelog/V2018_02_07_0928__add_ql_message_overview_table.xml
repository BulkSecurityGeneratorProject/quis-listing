<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="V2018_02_08_0851" author="dgavrilov">
        <comment>Added new helper ql_messages_overview table.</comment>
        <createTable tableName="ql_dl_message_overview">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sender" type="bigint" defaultValue="0">
                <constraints nullable="false"
                    foreignKeyName="fk_dl_messageoverview_sender_user"
                    referencedTableName="ql_user"
                    referencedColumnNames="id"/>
            </column>
            <column name="receiver" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="varchar(160)">
                <constraints nullable="false"/>
            </column>
            <column name="listing_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="timestamp">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
